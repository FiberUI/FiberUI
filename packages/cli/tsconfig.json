{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "tsc-alias": {
        "resolveFullPaths": true,
        "replaceExtensions": {
            ".ts": ".js"
        }
    },
    "include": ["src"]
}
