{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FiberUI Configuration",
    "description": "Configuration schema for FiberUI - A library of reusable components built with React Aria and Tailwind CSS.",
    "type": "object",
    "properties": {
        "style": {
            "type": "string",
            "description": "The visual style preset to use",
            "enum": ["default"],
            "default": "default"
        },
        "tailwind": {
            "type": "object",
            "description": "Tailwind CSS configuration",
            "properties": {
                "config": {
                    "type": "string",
                    "description": "Path to tailwind.config file",
                    "default": "tailwind.config.js"
                },
                "css": {
                    "type": "string",
                    "description": "Path to the global CSS file",
                    "default": "src/app/globals.css"
                },
                "baseColor": {
                    "type": "string",
                    "description": "Base color for the theme",
                    "enum": [
                        "amber",
                        "lime",
                        "emerald",
                        "blue",
                        "neutral",
                        "stone"
                    ],
                    "default": "neutral"
                },
                "cssVariables": {
                    "type": "boolean",
                    "description": "Whether to use CSS variables for theming",
                    "default": true
                }
            },
            "required": ["config", "css", "baseColor", "cssVariables"]
        },
        "rsc": {
            "type": "boolean",
            "description": "Whether the project uses React Server Components",
            "default": false
        },
        "tsx": {
            "type": "boolean",
            "description": "Whether to use TypeScript",
            "default": true
        },
        "aliases": {
            "type": "object",
            "description": "Import path aliases",
            "properties": {
                "components": {
                    "type": "string",
                    "description": "Path alias for components directory",
                    "default": "@/components"
                },
                "utils": {
                    "type": "string",
                    "description": "Path alias for utility functions",
                    "default": "@/lib/utils"
                }
            },
            "required": ["components", "utils"]
        }
    },
    "required": ["style", "tailwind", "rsc", "tsx", "aliases"]
}
